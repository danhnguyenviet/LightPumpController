<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:id="@+id/tvHumidity"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:id="@+id/tvLocationHumidity"
            android:layout_below="@+id/tvHumidity"
            android:layout_alignLeft="@+id/tvHumidity"
            android:layout_alignStart="@+id/tvHumidity"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:layout_below="@+id/tvLocationHumidity"
            android:layout_alignLeft="@+id/tvLocationHumidity"
            android:layout_alignStart="@+id/tvLocationHumidity"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/tvDateHumidity"
            android:textSize="20dp"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/textView8"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvDateHumidity"
            android:layout_alignLeft="@+id/tvDateHumidity"
            android:layout_alignStart="@+id/tvDateHumidity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/tvTimeHumidity"
            android:textSize="20dp"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:id="@+id/textView10"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tvTimeHumidity"
            android:layout_alignLeft="@+id/tvTimeHumidity"
            android:layout_alignStart="@+id/tvTimeHumidity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:id="@+id/tvHumidityValue"
            android:textSize="20dp"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:textColor="#ff0000" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set limitation"
            android:id="@+id/cbSetHumidityLimitation"
            android:textSize="20dp"
            android:checked="false"
            android:layout_below="@+id/tvHumidityValue"
            android:layout_alignLeft="@+id/tvHumidityValue"
            android:layout_alignStart="@+id/tvHumidityValue"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:id="@+id/tvHighHumidity"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:layout_below="@+id/cbSetHumidityLimitation"
            android:layout_alignLeft="@+id/cbSetHumidityLimitation"
            android:layout_alignStart="@+id/cbSetHumidityLimitation"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etHighHumidity"
            android:layout_below="@+id/tvHighHumidity"
            android:layout_alignLeft="@+id/tvHighHumidity"
            android:layout_alignStart="@+id/tvHighHumidity"
            android:layout_alignRight="@+id/cbSetHumidityLimitation"
            android:layout_alignEnd="@+id/cbSetHumidityLimitation"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:id="@+id/tvLowHumidity"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:layout_below="@+id/etHighHumidity"
            android:layout_alignLeft="@+id/etHighHumidity"
            android:layout_alignStart="@+id/etHighHumidity"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etLowHumidity"
            android:layout_below="@+id/tvLowHumidity"
            android:layout_alignLeft="@+id/tvLowHumidity"
            android:layout_alignStart="@+id/tvLowHumidity"
            android:layout_alignRight="@+id/etHighHumidity"
            android:layout_alignEnd="@+id/etHighHumidity"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:id="@+id/btnApplyHumidityLimitation"
            android:layout_below="@+id/etLowHumidity"
            android:layout_alignLeft="@+id/etLowHumidity"
            android:layout_alignStart="@+id/etLowHumidity"
            android:visibility="invisible"
            android:enabled="true" />

    </RelativeLayout>
</ScrollView>