<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Light &amp; Pump"
            android:id="@+id/btnSystem"
            android:onClick="callSystemActivity"
            android:layout_below="@+id/imageView2"
            android:layout_alignLeft="@+id/btnTemperature"
            android:layout_alignStart="@+id/btnTemperature" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:id="@+id/btnTemperature"
            android:onClick="callTemperatureActivity"
            android:layout_below="@+id/btnSystem"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Moisture"
            android:id="@+id/btnMoisture"
            android:onClick="callMoistureActivity"
            android:layout_below="@+id/btnTemperature"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HONEYNET"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textColor="#ef1010"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright \u00A9 HONEYNET 2013 - 2016"
            android:id="@+id/textView13"
            android:textSize="15dp"
            android:textColor="#ef1010"
            android:typeface="serif"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/textView"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:id="@+id/button5"
            android:onClick="callSettingActivity"
            android:layout_below="@+id/btnMoisture"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="About"
            android:id="@+id/button6"
            android:onClick="callAboutActivity"
            android:layout_below="@+id/button5"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>
