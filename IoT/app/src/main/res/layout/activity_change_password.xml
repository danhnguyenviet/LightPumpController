<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f7f7f7"
    android:gravity="center">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="15"
            android:id="@+id/ed_change_password_old"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:hint="Current Password"
            android:typeface="serif"
            android:textColorHint="#a1a1a1"
            android:textIsSelectable="false" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="15"
            android:id="@+id/ed_change_password_new"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:hint="New Password"
            android:typeface="serif"
            android:layout_marginTop="20dp"
            android:textColorHint="#a1a1a1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="15"
            android:id="@+id/ed_change_password_renew"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:hint="Confirm Password"
            android:typeface="serif"
            android:textColorHint="#a1a1a1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/btn_change_password_change"
            android:layout_marginTop="20dp"
            android:background="#d52f15"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textSize="18dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btn_change_password_cancel"
            android:background="#d52f15"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textSize="18dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

</LinearLayout>
