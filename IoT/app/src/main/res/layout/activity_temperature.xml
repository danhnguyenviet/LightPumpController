<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:id="@+id/tvMoisture"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/tvLocationTemperature"
        android:layout_below="@+id/tvMoisture"
        android:layout_alignLeft="@+id/tvMoisture"
        android:layout_alignStart="@+id/tvMoisture"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/textView6"
        android:textSize="20dp"
        android:layout_below="@+id/tvLocationTemperature"
        android:layout_alignLeft="@+id/tvLocationTemperature"
        android:layout_alignStart="@+id/tvLocationTemperature"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:id="@+id/tvDateTemperature"
        android:textSize="20dp"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvDateTemperature"
        android:layout_alignLeft="@+id/tvDateTemperature"
        android:layout_alignStart="@+id/tvDateTemperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:id="@+id/tvTimeTemperature"
        android:textSize="20dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tvTimeTemperature"
        android:layout_alignLeft="@+id/tvTimeTemperature"
        android:layout_alignStart="@+id/tvTimeTemperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:id="@+id/tvTemperatureValue"
        android:textSize="20dp"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textColor="#ff0000" />
</RelativeLayout>